<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/allView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.prince.gagareader.view.ReaderView
	        android:id="@+id/myReaderView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	    </com.prince.gagareader.view.ReaderView>
	    <LinearLayout 
	        android:id="@+id/dengshengLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:visibility="invisible"
	        android:layout_alignParentTop="true">
	        <ImageView android:id="@+id/dengsheng"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:layout_marginRight="20dip"
	            android:background="@drawable/dengsheng"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/buttonBottemLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:visibility="invisible"
	        android:layout_alignParentBottom="true">
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/muluButtonLinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/muluicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="目录"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/jinduButtonLinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/jindu"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="进度"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/nightlinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView 
	                    android:id="@+id/nightimg"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/nighticon"/>
	                <TextView 
	                    android:id="@+id/nighttv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="夜间"/>
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/lightbuttonlinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/liangduicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="亮度"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgbuttonLinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/bgicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="背景"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/fontsizeButtonLinear"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:background="@drawable/bottem_layout_bold"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/fontsize"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="字体"/>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/bgiconLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingTop="5dip"
	        android:visibility="invisible"
	        android:background="@drawable/bottem_layout_bold"
	        android:layout_alignParentBottom="true">
	        <LinearLayout 
	            android:id="@+id/topbgiconLinear"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/bgicon_0"
	                android:tag="bgicon_0"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/springicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="春天"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_1"
	                android:tag="bgicon_1"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/nightstyleicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="黑夜"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_2"
	                android:tag="bgicon_2"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/skyicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="天空"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_3"
	                android:tag="bgicon_3"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/fenhongicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="粉红"/>
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/bottembgiconLinear"
	            android:orientation="horizontal">
	            <LinearLayout 
	                android:id="@+id/bgicon_4"
	                android:tag="bgicon_4"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/yellowicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="少女"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_5"
	                android:tag="bgicon_5"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/yanpiicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="羊皮"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_6"
	                android:tag="bgicon_6"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/huyanicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="护眼"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/bgicon_7"
	                android:tag="bgicon_7"
	                android:layout_height="80dip"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:padding="5dip"
	                android:orientation="vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/jiushuicon"/>
	                <TextView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="20sp"
	                    android:text="旧书"/>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/lightseekBarLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bottem_layout_bold"
	        android:layout_alignParentBottom="true"
	        android:visibility="invisible"
	        android:padding="15dip">
	         <SeekBar
	             android:id="@+id/lightseekBar"
	             style="?android:attr/progressBarStyleHorizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:layout_margin="5dip"
	             android:indeterminate="false"
	             android:padding="2dip"
	             android:progress="50" />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/jinduseekBarLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bottem_layout_bold"
	        android:layout_alignParentBottom="true"
	        android:visibility="invisible"
	        android:padding="15dip">
	         <SeekBar
	             android:id="@+id/jinduseekBar"
	             style="?android:attr/progressBarStyleHorizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:layout_margin="5dip"
	             android:indeterminate="false"
	             android:padding="2dip"
	             android:progress="50" />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/fontsizeseekBarLinear"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bottem_layout_bold"
	        android:layout_alignParentBottom="true"
	        android:visibility="invisible"
	        android:padding="15dip">
	         <SeekBar
	             android:id="@+id/fontsizeseekBar"
	             style="?android:attr/progressBarStyleHorizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content"
	             android:layout_margin="5dip"
	             android:indeterminate="false"
	             android:padding="2dip"
	             android:progress="50" />
	    </LinearLayout>
    </RelativeLayout>
	
</LinearLayout>